<aura:component access="global" controller="getAccountStatus">



<!-- attribute to store table data -->
<aura:attribute name="tableData" Type="Object[]"/>
<!-- aura handler to load Account data -->
<aura:handler name="init" value="{!this}" action="{!c.loadAccount}"/>
<aura:attribute name="showModal" type="Boolean" default="false"/>
<aura:attribute name="modalData" type="String[]" default="[]"/>



<div style="margin-top:20px">
    <div class="demo-only" style="padding: 0.5rem; background: rgb(22, 50, 92);">
        <div class="slds-text-color_success slds-text-title_caps">Account Information</div>
    </div>
    <div>
        <table class="slds-table slds-table_bordered slds-table_cell-buffer">
            <thead>
            <tr class="slds-text-title_caps">
                <th scope="col">
                    <ui:inputCheckbox aura:id="box3" change="{!c.selectAll}"/>
                </th>
                <th scope="col">
                    <div class="slds-truncate" title="Account Name">Account Name</div>
                </th>
                <th scope="col">
                    <div class="slds-truncate" title="Account Status">Account Status</div>
                </th>
                <th scope="col">
                    <div class="slds-truncate" title="Account Created Date">Account Created Date</div>
                </th>
            </tr>
            </thead>
            <tbody>

            <aura:iteration items="{!v.tableData}" var="obj">
                <tr>
                    <td><ui:inputCheckbox aura:id="checkboxGroup" value="{!obj.checkBox}" /></td>
                    <td>{!obj.accObject.Name}</td>
                    <td>{!obj.accObject.Status__c}</td>
                    <td>{!obj.accObject.CreatedDate}</td>
                </tr>
            </aura:iteration>

            </tbody>


        </table>
        <lightning:button class="slds-button--brand" label="Show model" onclick="{!c.showModalButtonHandler}"/>

        <aura:if isTrue="{!v.showModal}">

            <!--###### MODAL BOX Start From Here ######-->
            <div role="dialog" tabindex="-1" aria-labelledby="header99" class="slds-modal slds-fade-in-open ">
                <div class="slds-modal__container">
                    <!-- ###### MODAL BOX HEADER Part Start From Here ######-->
                    <div class="slds-modal__header">
                        <button class="slds-button slds-modal__close slds-button--icon-inverse" title="Close" onclick="{!c.closeModel}">
                            X
                            <span class="slds-assistive-text">Close</span>
                        </button>
                        <h2 id="header99" class="slds-text-heading--medium">Account Status</h2>
                    </div>
                    <!--###### MODAL BOX BODY Part Start From Here ######-->
                    <div class="slds-modal__content slds-p-around--medium">
                        <table class="slds-table">
                            <tr><th class="slds-table--header-fixed">NAME</th>
                                <th class="slds-table--header-fixed">STATUS</th></tr>
                        <aura:iteration items="{!v.modalData}" var="data">
                            <tr>
                                <td>{!data.Name}</td>
                                <td>{!data.status}</td>
                            </tr>
                        </aura:iteration>
                        </table>
                    </div>
                    <!--###### MODAL BOX FOOTER Part Start From Here ######-->
                    <div class="slds-modal__footer ">
                        <button class="slds-button slds-button--destructive" onclick="{!c.closeModel}" >Close</button>
                    </div>
                </div>
            </div>

        </aura:if>
    </div>

</div>
</aura:component>