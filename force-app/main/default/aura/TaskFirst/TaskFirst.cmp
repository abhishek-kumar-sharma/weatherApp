<aura:component description="TaskFirst" access="global" controller="ChangeOwnerControllerBatch" implements="flexipage:availableForRecordHome,force:hasSObjectName,force:hasRecordId">

    <!-- Attribute to store record id -->
    <aura:attribute name="recordId" type="String"/>
    <!-- Attribute to store Object Name -->
    <aura:attribute name="sObjectName" type="String"/>
    <!-- Attribute to show/hide modal -->
    <aura:attribute name="showModal" type="Boolean" default="false"/>

    <!-- Delete button start-->
    <div>
        <lightning:button class="slds-button_brand slds-size--12-of-12 " label="Delete" onclick="{!c.deleteController}"/>
    </div>
    <!-- Delete button end -->


    <!-- slds modal on delete button click -->
    <aura:if isTrue="{!v.showModal}">

        <div class="demo-only" style="height: 640px;">
            <section role="dialog" tabindex="-1" aria-labelledby="modal-heading-01" aria-modal="true" aria-describedby="modal-content-id-1" class="slds-modal slds-slide-up-open">
                <div class="slds-modal__container">
                    <header class="slds-modal__header">
                        <button class="slds-button slds-button_icon slds-modal__close slds-button_icon-inverse" title="Close">
                            <lightning:icon iconName="utility:close" class="slds-button__icon slds-button__icon_large" size="xx-small" />
                            <span class="slds-assistive-text">Close</span>
                        </button>
                        <h2 id="modal-heading-01" class="slds-text-heading_medium slds-hyphenate">Delete Successful</h2>
                    </header>
                    <div class="slds-modal__content slds-p-around_medium" id="modal-content-id-1">
                        <p>It will take a while to delete this record If not, contact to System Administrator.</p>
                    </div>
                    <footer class="slds-modal__footer">
                        <button class="slds-button slds-button_neutral" onclick="{!c.handleModal}">OK</button>
                    </footer>
                </div>
            </section>
            <div class="slds-backdrop slds-backdrop_open"></div>
        </div>



    </aura:if>




</aura:component>