<aura:component description="usingExpressionParentCmp">
    <aura:attribute name="parentValue" type="String" default="parent"/>
    <aura:attribute name="childOneValue" type="String" default="child 1"/>
    <aura:attribute name="childTwoValue" type="String" default="child 2"/>
    <aura:attribute name="loadTwo" type="Boolean" default="false"/>
    <aura:attribute name="choice" type="Boolean" default="false"/>
    <!--<aura:handler name="init" value="{!this}" action="{!c.loadValue}"/>-->


    <!-- expression evaluation -->
    <lightning:button label="{!v.choice == true ? 'True Value' : 'False Value'}" class="{!v.choice == true?'slds-button slds-button--brand':'slds-button slds-button--success'}" onclick="{#c.choiceSelect}" />
    <center>
        hello parent component
    </center>
    Parent Value : {!v.parentValue}<br/>
    Child One Value : {!v.childOneValue}<br/>
    Child Two Value : {!v.childTwoValue}
    <br />
    <center>
        <lightning:button label="Load Value in Parent" variant="brand" onclick="{!c.loadValue}"/>
    </center>
    <br/>
    <c:usingExpressionChild1Cmp parentValue="{!v.parentValue}" childOneValue="{!v.childOneValue}"
                                childTwoValue="{!v.childTwoValue}"/>
    <br/>
    <br/>
    <aura:if isTrue="{!v.loadTwo}">
        <c:usingExpressionChild2Cmp parentValue="{#v.parentValue}" childOneValue="{#v.childOneValue}"
                                    childTwoValue="{#v.childTwoValue}"/>
    </aura:if>
</aura:component>