<aura:component description="MyCustomLookup" controller="MycustomLookup_Apex">

    <!-- attribute to show/hide modal -->
    <aura:attribute name="showModal" type="Boolean" default="false"/>
    <!-- Attribute to store new opportunity -->
    <aura:attribute name="newOpp" type="Opportunity" default="{'SObjectType' : 'Opportunity'}"/>
    <!-- Attribute to store stage -->
    <aura:attribute name="stage" type="String[]"/>
    <!-- Attribute to store Account data -->
    <aura:attribute name="accountData" type="Object"/>
    <!--  Attribute to show List of account -->
    <aura:attribute name="showAccountList" type="Boolean" default="false"/>


    <lightning:button onclick="{!c.showModalController}" label="New"/>

    <!-- slds modal for opportunity creation -->
    <aura:if isTrue="{!v.showModal}">
        <div class="slds">

            <div class="slds-modal__container">
                <div class="slds-modal__header">
                    <h2 class="slds-text-heading--medium"> New Opportunity</h2>
                </div>
                <div class="slds-modal__content slds-p-around--medium">
                    <div class="slds-section">
                        <div class="slds-section-title">
                            <span>Opportunity Information</span>
                        </div>
                    </div>
                    <!-- Opportunity Name and close date -->
                    <ui:inputText value="{!v.newOpp.Name}" required="true" class="slds-input" label="Opportunity Name"/>
                    <ui:inputDate value="{!v.newOpp.CloseDate}" label="Close Date" class="slds-input-has-icon--right"
                                  required="true" displayDatePicker="true"/>

                    <!-- Opportunity stage Name -->
                    <ui:inputSelect label="Opoortunity Stage" required="true" value="{!v.newOpp.StageName}"
                                    class=" slds-input slds-select_container">
                        <ui:inputSelectOption text=""></ui:inputSelectOption>
                        <aura:iteration items="{!v.stage}" var="level">
                            <ui:inputSelectOption text="{!level}" label="{!level}" class="slds-select slds-input"/>
                        </aura:iteration>
                    </ui:inputSelect>

                    <!-- account lookup section -->
                    <div class="slds-form-element">
                        <label class="slds-form-element__label" for="text-input-id-1">Account Name</label>
                        <div class="slds-form-element__control slds-input-has-icon slds-input-has-icon_right">
                            <lightning:icon iconName="utility:search"
                                            class="slds-icon slds-input__icon slds-input__icon_right slds-icon-text-default"
                                            size="xx-small"/>
                            <ui:inputText class="slds-input" value="{!v.newOpp.AccountId}"
                                          keyup="{!c.loadAccountController}" updateOn="keyUp"
                                          placeholder="Placeholder Text"/>
                        </div>
                        <aura:if isTrue="{!v.showAccountList}">

                            <div id="listbox-unique-id" role="listbox">
                                <ul class="slds-listbox slds-scrollable slds-listbox_vertical slds-dropdown slds-dropdown_fluid"
                                    role="presentation" style="height: 150px">
                                    <aura:iteration items="{!v.accountData}" var="acc">
                                        <li role="presentation" class="slds-listbox__item" value="{!acc.accId}" onclick="{!c.getSelectedAccountId}"  >
                                            <div id="listbox-option-unique-id-02"
                                                 class="slds-media slds-listbox__option slds-listbox__option_entity slds-listbox__option_has-meta"
                                                 role="option">
                                                  <span class="slds-media__figure">
                                                    <span class="slds-icon_container slds-icon-standard-account"
                                                          title="Description of icon when needed">
                                                        <lightning:icon size="small" class="slds-icon slds-icon_small" iconName="standard:account" />
                                                    </span>
                                                  </span>
                                                <span class="slds-media__body">
                                                    <span aura:id="selectedListItem" class="slds-listbox__option-text slds-listbox__option-text_entity"  >{!acc.accName}</span>
                                                    <span class="slds-listbox__option-meta slds-listbox__option-meta_entity"></span>
                                                  </span>
                                            </div>
                                        </li>
                                    </aura:iteration>
                                </ul>
                            </div>

                        </aura:if>
                    </div>
                </div>
                <!-- account lookup end -->
                <footer class="slds-modal__footer slds-modal__footer_directional">
                    <button class="slds-button slds-button_neutral" onclick="{!c.hideModalController}">Cancel</button>
                    <button class="slds-button slds-button_brand" onclick="{!c.createOppController}">Save</button>
                </footer>
            </div>
        </div>
    </aura:if>

</aura:component>